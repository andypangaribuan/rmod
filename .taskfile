#: open devbox shell #: opt: --fresh (delete .cargo and .rustup directories first)
function shell {
  if [[ $1 == "--fresh" ]]; then
    rm -rf .cargo .rustup
  fi

  devbox shell
}


#: do cargo build
function build {
  devbox run build
}


#: do cargo test
function test {
  devbox run test
}


#: do cargo clippy and fmt check
function lint {
  devbox run lint
}


#: run cspell to check the project words
function spell {
  spell-rs
}


#: space
[ -z "$TASKFILE_EXECUTOR" ] && sq taskfile --execute "$@"
